{% extends 'base.html.twig' %} {% block title %}Liste de produits{% endblock %} {% block body %}
<h1 class="title">Liste de produits : </h1>

<table class="table">
    <thead>
        <tr>
            <th class="p-5">Nom</th>
            <th class="p-5">Visuel</th>
            <th class="p-5">Description</th>
            <th class="p-5">Prix (€)</th>
            <th class="p-5">Produits disponibles en stock</th>
            <th class="p-5">Ajout Panier</th>
        </tr>
    </thead>
    <tbody>
        {% for product in products %}
        <tr>
            <td class="p-5">{{ product.name }}</td>
            <td class="p-5">{{ product.image }}</td>
            <td class="p-5">{{ product.description|raw }}</td>
            <td class="p-5">{{ product.price }}</td>
            <td class="p-5">{{ product.stock }}</td>
            <td class="p-5">{{ product.id }}
            </td>
        </tr>
        {% else %}
        <tr>
            <td colspan="6">Aucun produit trouvé dans la catégorie {{ category.name }}</td>
        </tr>
        {% endfor %}
    </tbody>
</table>

<a class="m-5" href="{{ path('home') }}">Retour à l'accueil</a> {% endblock %}