{% extends 'base.html.twig' %}

{% block title %}Cart{% endblock %}

{% block body %}
    <h1>Cart</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cart.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ cart.date ? cart.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>PaymentStatus</th>
                <td>{{ cart.paymentStatus ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>ProductNumber</th>
                <td>{{ cart.productNumber }}</td>
            </tr>
            <tr>
                <th>Total</th>
                <td>{{ cart.total }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ cart.quantity }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('cart_index') }}">back to list</a>

    <a href="{{ path('cart_edit', {'id': cart.id}) }}">edit</a>

    {{ include('cart/_delete_form.html.twig') }}
{% endblock %}
